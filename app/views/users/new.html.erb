<h1>Users#new</h1>
<%= @user.errors.count %>
<% if !flash.empty? and !flash.alert %>
    <% flash.alert.each do |error| %>
        <div>
            <%= error %>
        </div>
    <% end %>
<% end %>
<%= form_for(@user) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username, placeholder: :username %>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: :password%>
    <%= f.label :email %>
    <%= f.text_field :email, placeholder: :email%>
    <%= submit_tag "Create" %>
<% end %>
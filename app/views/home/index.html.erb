<h1>Home#index</h1>
<% if logged_in? %>
    <h2><a href="/home/login">Login</a></h2>
<% else %>
    <h2><a href="/home/logout">Logout</a></h2>
<% end %>
<p>Find me in app/views/home/index.html.erb</p>
<div>
    <h1>Articles</h1>
    <% articles('Google').items.each do |item |%>
        <div class="article">
            <h2><%= item.title %></h2>
            <p><%= logged_in? ? (raw item.description) : "You must be logged in" %></p>
            <p><%= item.pubDate %></p>
        </div>
    <% end %>
</div>
